<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="#5a000000"
              android:layout_gravity="center"
              android:gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/video_light_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/om_video_player_ic_light"/>
    <TextView
        android:id="@+id/video_light_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#FFF"
        android:text= "89%"
        />
    <SeekBar
        android:id="@+id/light_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:splitTrack="false"
        android:maxHeight="@dimen/om_video_float_seekbar_maxheight"
        android:minHeight="@dimen/om_video_float_seekbar_minheight"
        android:progressDrawable="@drawable/om_video_player_progress"
        android:thumb="@null"
        android:thumbOffset="0dp" />
</LinearLayout>