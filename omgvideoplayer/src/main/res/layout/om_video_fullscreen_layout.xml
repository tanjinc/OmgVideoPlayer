<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top">
        <ImageView
            android:id="@+id/video_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f3065aea"
            android:text="full title"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_gravity="bottom">
        <ImageView
            android:id="@+id/start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/om_video_player_playpause"/>
        <ImageView
            android:id="@+id/exit_full_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/exo_controls_next"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/start_btn"
            android:layout_toEndOf="@id/start_btn"
            android:layout_toLeftOf="@id/exit_full_btn"
            android:layout_toStartOf="@id/exit_full_btn"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/video_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="00:00"/>
            <SeekBar
                android:id="@+id/video_seekbar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/video_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="00:00"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/danmuInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/start_btn"
            android:layout_toEndOf="@id/start_btn"
            android:layout_toLeftOf="@id/exit_full_btn"
            android:layout_toStartOf="@id/exit_full_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginEnd="-25dp"
                android:layout_weight="1"
                android:text="撩一下主播呗~"
                android:paddingStart="15dp"
                android:textColor="#999999"
                android:gravity="center_vertical"
                android:textSize="14sp" />
            <TextView
                android:layout_width="57dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="发送"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/full_screen_danmu_input_layout"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:visibility="gone">
        <EditText
            android:id="@+id/danmuEditView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#c0000000"
            android:paddingStart="15dp"
            android:text="主播你真6"
            android:imeOptions="flagNoExtractUi"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/danmuSendBtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#FF009AFF"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"
            android:text="发送"/>
    </LinearLayout>
</FrameLayout>