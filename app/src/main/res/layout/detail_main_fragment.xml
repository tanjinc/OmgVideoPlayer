<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a3000000">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroller_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E0E0E0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8.5dp"
                android:paddingBottom="8.5dp"
                android:background="#FFF"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingStart="15dp"
                    android:textCursorDrawable="@drawable/live_chat_cursor_bg"
                    android:hint="撩一下主播呗~"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:background="@drawable/live_detail_char_input_bg"/>
                <TextView
                    android:id="@+id/sendBtn"
                    android:layout_width="57dp"
                    android:layout_height="31dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:textColor="@drawable/text_press_bg"
                    android:background="@drawable/live_detail_char_send_bg"
                    android:text="发送"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>